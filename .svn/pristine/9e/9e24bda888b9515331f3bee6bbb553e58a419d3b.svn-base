	$('#cancelBTN').click(function(){
		if(!confirm('예를 누르시면 작성한 내용이 사라집니다.')){
			return false;
    	} else {
    		return true;
    	}
	});

    $('#listBTN').click(function(){
    	if(confirm('돌아가시겠습니까? 작성된 내용이 사라집니다.')){
    		location.href = '/user/freeboard/freeboardList.do';
    	}
    });
	
    $('form[name=insertForm]').click(function(){
    	//validation
    	
    	
    	$(this).append($('<input type="hidden" name="bo_cont" value="' + $('.panel-body').html() + '" />'));
    	$(this).append($('<input type="hidden" name="bo_writer" value="${LOGIN_MEMBERINFO.mem_id}" />'));
    	
    });
    
